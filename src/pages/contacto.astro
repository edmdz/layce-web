---
import Layout from "../components/layout/Layout.astro";
// import ContactForm from '../components/forms/ContactForm.astro'; // Descomentar cuando tengas el componente

const pageTitle = "Contacto | LAYCE Construcciones"; // [cite: 409]
const pageDescription =
  "Ponte en contacto con LAYCE Construcciones para tus próximos proyectos. Estamos listos para ayudarte y transformar tus ideas en realidad."; // [cite: 409, 410] Actualizado para ser más atractivo
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="bg-white min-h-screen">
    <!-- Header de la página -->
    <header class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
      <!-- Título principal mejorado con estilo visual -->
      <div class="text-center mb-16">
        <div
          class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-primary to-primary/80 rounded-2xl shadow-lg mb-6 scroll-animate util-scale-up util-duration-medium"
        >
          <svg
            class="w-8 h-8 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
            ></path>
          </svg>
        </div>
        <h1
          class="text-3xl md:text-4xl lg:text-5xl font-semibold text-neutralText mb-4 scroll-animate util-slide-in-up util-duration-normal util-delay-150ms balance-text"
        >
          Hablemos de <span class="text-primary">Tu Proyecto</span>
        </h1>
        <p
          class="text-xl text-neutralText/70 max-w-3xl mx-auto leading-relaxed scroll-animate util-slide-in-up util-duration-normal util-delay-250ms balance-text"
        >
          Estamos listos para escucharte y colaborar en la
          <span class="text-primary font-medium"
            >materialización de tus ideas</span
          >
        </p>
      </div>
    </header>

    <section class="py-16 md:py-24 bg-lightGray relative">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <div class="grid lg:grid-cols-12 gap-12 items-start">
            {/* Columna Izquierda: Formulario de Contacto */}
            <div
              class="lg:col-span-7 bg-white rounded-2xl shadow-2xl p-8 md:p-10 scroll-animate util-slide-in-left util-duration-normal"
            >
              <h2 class="text-3xl font-bold text-neutralText mb-2">
                Envíanos un Mensaje
              </h2>
              <p class="text-neutralText/70 mb-8">
                Completa el siguiente formulario y nos pondremos en contacto
                contigo a la brevedad.
              </p>

              {/* Formulario configurado para Formspree */}
              <form
                action="https://formspree.io/f/xovwqlyq"
                method="POST"
                class="space-y-6"
              >
                {/* Campo para redirigir a página interna después del envío */}
                <input type="hidden" name="_next" value="https://laycecontrucciones.com/gracias" />
                
                <div>
                  <label
                    for="nombre"
                    class="block text-sm font-medium text-neutralText/90"
                    >Nombre Completo</label
                  >
                  <input
                    type="text"
                    name="nombre"
                    id="nombre"
                    autocomplete="name"
                    required
                    class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary sm:text-sm placeholder-gray-400"
                  />
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label
                      for="email"
                      class="block text-sm font-medium text-neutralText/90"
                      >Correo Electrónico</label
                    >
                    <input
                      type="email"
                      name="email"
                      id="email"
                      autocomplete="email"
                      required
                      class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary sm:text-sm placeholder-gray-400"
                    />
                  </div>
                  <div>
                    <label
                      for="telefono"
                      class="block text-sm font-medium text-neutralText/90"
                      >Teléfono <span class="text-xs text-gray-500"
                        >(Opcional)</span
                      ></label
                    >
                    <input
                      type="tel"
                      name="telefono"
                      id="telefono"
                      autocomplete="tel"
                      class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary sm:text-sm placeholder-gray-400"
                    />
                  </div>
                </div>

                <div>
                  <label
                    for="asunto"
                    class="block text-sm font-medium text-neutralText/90"
                    >Asunto / Servicio de Interés</label
                  >
                  <input
                    type="text"
                    name="asunto"
                    id="asunto"
                    class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary sm:text-sm placeholder-gray-400"
                    placeholder="Ej: Cotización Diseño Residencial, Consulta General"
                  />
                </div>

                <div>
                  <label
                    for="mensaje"
                    class="block text-sm font-medium text-neutralText/90"
                    >Mensaje</label
                  >
                  <textarea
                    id="mensaje"
                    name="mensaje"
                    rows="4"
                    required
                    class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-primary focus:border-primary sm:text-sm placeholder-gray-400"
                  ></textarea>
                </div>

                {/* Campo "honeypot" opcional para spam (recomendado) */}
                {
                  /* <input type="text" name="_gotcha" style="display:none" /> */
                }

                {
                  /* Si quieres redirigir a una página de "Gracias" específica en tu sitio: */
                }
                {
                  /* <input type="hidden" name="_next" value="https://tu-sitio.com/gracias.html"> */
                }

                {
                  /* Si quieres especificar un email de respuesta diferente al de tu cuenta Formspree (el usuario debe confirmar este email): */
                }
                {
                  /* <input type="hidden" name="_replyto" value="otra-direccion@example.com"> */
                }

                <div class="text-right">
                  <button
                    type="submit"
                    class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-secondary hover:bg-secondary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary/70 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-0.5"
                  >
                    Enviar Mensaje
                  </button>
                </div>
              </form>
              {/* Fin del Formulario */}
            </div>

            {/* Columna Derecha: Información Directa y Mapa */}
            <div class="lg:col-span-5 space-y-8">
              <div
                class="bg-white rounded-2xl shadow-2xl p-8 md:p-10 scroll-animate util-slide-in-right util-duration-normal util-delay-150ms"
              >
                <h2 class="text-2xl font-bold text-neutralText mb-6">
                  Información Directa
                </h2>
                <address class="not-italic space-y-4">
                  <div class="flex items-start">
                    <svg
                      class="w-6 h-6 text-primary flex-shrink-0 mr-3 mt-0.5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
                      ></path></svg
                    >
                    <div>
                      <strong class="block text-neutralText/90"
                        >Correo Electrónico:</strong
                      >
                      <a
                        href="mailto:Cynthia.reyna.2021@gmail.com"
                        class="text-primary hover:text-secondary transition-colors duration-300 break-all"
                        >Cynthia.reyna.2021@gmail.com</a
                      >
                      {/* [cite: 527] */}
                    </div>
                  </div>
                  <div class="flex items-start">
                    <svg
                      class="w-6 h-6 text-primary flex-shrink-0 mr-3 mt-0.5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"
                      ></path></svg
                    >
                    <div>
                      <strong class="block text-neutralText/90"
                        >Teléfono:</strong
                      >
                      <a
                        href="tel:+528119178992"
                        class="text-primary hover:text-secondary transition-colors duration-300"
                        >+52 81 1917 8992</a
                      >
                      {/* [cite: 523] */}
                    </div>
                  </div>
                  <div class="flex items-start">
                    <svg
                      class="w-6 h-6 text-primary flex-shrink-0 mr-3 mt-0.5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"
                      ></path></svg
                    >
                    <div>
                      <strong class="block text-neutralText/90"
                        >Ubicación:</strong
                      >
                      <span class="text-neutralText/80"
                        >Monterrey, Nuevo León, México</span
                      >
                    </div>
                  </div>
                  <div class="flex items-start">
                    <svg
                      class="w-6 h-6 text-primary flex-shrink-0 mr-3 mt-0.5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                      ></path></svg
                    >
                    <div>
                      <strong class="block text-neutralText/90"
                        >Horario de Atención:</strong
                      >
                      <span class="text-neutralText/80"
                        >Lunes a Viernes: 9:00 AM - 6:00 PM</span
                      >
                    </div>
                  </div>
                </address>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .balance-text {
    text-wrap: balance;
  }
</style>
