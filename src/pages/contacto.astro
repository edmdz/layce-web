---
import Layout from '../components/layout/Layout.astro';
// Importarías aquí el componente del formulario de contacto cuando lo tengas
// import ContactForm from '../components/forms/ContactForm.astro';


const pageTitle = "Contacto | LAYCE Construcciones";
const pageDescription = "Ponte en contacto con LAYCE Construcciones para tus próximos proyectos. Estamos listos para ayudarte.";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <h1 class="text-3xl md:text-4xl font-semibold text-primary mb-6 text-center">
      Contáctanos
    </h1>
    <p class="text-lg text-neutralText/80 text-center max-w-2xl mx-auto mb-10">
      ¿Tienes un proyecto en mente o alguna consulta? Completa el formulario o utiliza nuestros datos de contacto directo. 
      ¡Estamos listos para escucharte!
    </p>
    
    {/* Sección para el formulario y otros datos de contacto */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div class="p-8 bg-lightGray rounded-lg">
            <h2 class="text-2xl font-medium text-neutralText mb-4">Formulario de Contacto</h2>
            <p>Formulario de contacto aquí...</p>
            {/* <ContactForm /> */}
        </div>
        <div class="p-8 bg-lightGray rounded-lg">
            <h2 class="text-2xl font-medium text-neutralText mb-4">Información Directa</h2>
            <address class="not-italic space-y-3">
                <p><strong>Dirección:</strong> Av. Principal 123, Ciudad, Estado</p>
                <p><strong>Teléfono:</strong> <a href="tel:+525512345678" class="text-primary hover:text-secondary">+52 (55) 1234 5678</a></p>
                <p><strong>Email:</strong> <a href="mailto:contacto@layce.com" class="text-primary hover:text-secondary">contacto@layce.com</a></p>
                <p><strong>Horario:</strong> Lunes a Viernes, 9:00 AM - 6:00 PM</p>
            </address>
            {/* Podrías añadir un mapa aquí más adelante */}
        </div>
    </div>

  </div>
</Layout>