---
// src/components/home/HeroSection.astro

const heroData = {
    titleLine1: "ESPACIOS FUNCIONALES",
    titleLine2: "Y SOSTENIBLES",
    subtitle: "Transformamos visiones en estructuras sólidas y perdurables. Descubre la excelencia en cada detalle.",
    ctaText: "Conoce nuestros proyectos",
    ctaLink: "/proyectos",
    backgroundImage: "https://images.unsplash.com/photo-1582407947304-fd86f028f716?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1920&q=80", 
    altText: "Fachada de un moderno complejo residencial y de oficinas, ejemplo de proyecto de Layce Construcciones"
};
---

<section class="relative bg-lightGray text-neutralText pt-20 pb-24 md:pt-28 md:pb-32 lg:pt-32 lg:pb-36 overflow-hidden">
    {/* Imagen de fondo con object-cover y opacidad */}
    <div class="absolute inset-0 z-0">
        <img
            src={heroData.backgroundImage}
            alt={heroData.altText}
            class="w-full h-full object-cover opacity-30 md:opacity-40"
            loading="eager"
            fetchpriority="high"
            draggable="false"
            width="1920" height="1080"
        />
        <div class="absolute inset-0 bg-white/50"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
        {/* Contenedor para el texto: centrado en móvil, a la izquierda en md+ */}
        <div class="text-center md:text-left md:w-3/5 lg:w-1/2 xl:w-2/5"> 
            <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-extrabold tracking-tight text-neutralText balance-text">
                <span class="block">{heroData.titleLine1}</span>
                <span class="block text-primary mt-1 md:mt-2">{heroData.titleLine2}</span>
            </h1>
            <p class="mt-4 md:mt-6 max-w-xl mx-auto md:mx-0 text-base sm:text-lg md:text-xl text-neutralText/90 balance-text"> {/* mx-auto para centrar el párrafo si es más corto que su contenedor en móvil */}
                {heroData.subtitle}
            </p>
            <div class="mt-8 md:mt-10"> {/* El text-center/md:text-left del padre manejará la alineación del botón inline-flex */}
                <a
                    href={heroData.ctaLink}
                    class="inline-flex items-center justify-center px-7 py-3 border border-neutralText/30 text-base font-medium rounded-md text-neutralText bg-white 
                           hover:bg-gray-50 hover:border-neutralText/50
                           focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary/70
                           shadow-sm hover:shadow-md transition-all duration-300 transform hover:-translate-y-px"
                >
                    {heroData.ctaText}
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .balance-text {
        text-wrap: balance;
    }

    .container > div:first-child > * { 
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease-out forwards;
    }
    .container > div:first-child > h1 { animation-delay: 0.2s; }
    .container > div:first-child > p { animation-delay: 0.4s; }
    .container > div:first-child > div:last-of-type { animation-delay: 0.6s; }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>