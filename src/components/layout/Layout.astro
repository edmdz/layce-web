---
// src/components/layout/Layout.astro
import Header from './Header.astro';
// import Footer from './Footer.astro'; // Lo añadiremos después

export interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <meta name="generator" content={Astro.generator}>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | LAYCE Construcciones</title>

    <!-- Aquí podríamos añadir fuentes, estilos globales si no usamos Tailwind globalmente, etc. -->
    <style>
        /* Estilos muy básicos para empezar, Tailwind se encargará del resto */
        /* Los estilos de body se manejarán con clases de Tailwind */
        /* body {
            font-family: sans-serif; 
            margin: 0;
            background-color: #FFFFFF; 
            color: #333333; 
        } */

        main {
            padding: 1rem; /* Espaciado básico */
        }
    </style>
</head>
<body class="bg-white text-neutralText">
    <Header />
    <main>
        <slot />
    </main>
    {/* <Footer /> */}
</body>
</html> 