---
// src/components/layout/Footer.astro
import Logo from '../../assets/Layce_logo_horizontal_transparent.svg'; // Usar el mismo logo por ahora

const currentYear = new Date().getFullYear();

const ctaFooter = {
    title: "¿Listo para construir tu próximo gran proyecto?",
    buttonText: "Contáctanos Ahora",
    link: "/contacto",
};

// Placeholder para redes sociales.
const socialLinks = [
    // { name: "LinkedIn", href: "#", iconSvg: `<svg class="w-6 h-6 text-white hover:text-gray-200" ...>...</svg>` },
    { name: "Instagram", href: "#", iconSvg: `<svg class="w-6 h-6 text-white hover:text-gray-200" ...>...</svg>` },
];
// Ejemplo de icono SVG para redes (debes reemplazar con los reales y añadirles la clase para el color):
// const linkedInIcon = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-white group-hover:text-blue-200 transition-colors duration-300"> <path d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.25 6.5 1.75 1.75 0 016.5 8.25zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"></path> </svg>`;
// const socialLinks = [
//     { name: "LinkedIn", href: "https://linkedin.com/company/layce", iconSvg: linkedInIcon },
// ];
---

<footer class="bg-primary text-white pt-16 pb-8"> {/* Fondo primario, texto blanco general */}
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-8 lg:gap-12 xl:gap-16 mb-12 items-start">
            
            {/* Columna 1: Logo y Descripción */}
            <div class={socialLinks.length > 0 ? "lg:col-span-5" : "lg:col-span-6"}>
                <a href="/" class="inline-block mb-6" aria-label="Página de inicio de LAYCE Construcciones">
                    <img 
                        src={Logo.src} 
                        alt="Logo LAYCE Construcciones" 
                        class="h-12 w-auto"
                        style="filter: brightness(0) invert(1) grayscale(1) contrast(100);" {/* Logo blanco con CSS - MEJOR tener un SVG blanco */}
                    />
                </a>
                <p class="text-sm leading-relaxed max-w-md text-blue-100"> {/* Texto ligeramente más claro que blanco puro para suavizar */}
                    Construyendo confianza y calidad en cada proyecto. Su visión, nuestra experiencia combinada con innovación y compromiso sostenible.
                </p>
            </div>

            {/* Columna 2: CTA a Contacto */}
            <div class={socialLinks.length > 0 ? "lg:col-span-4" : "lg:col-span-6"}>
                <h3 class="text-lg font-semibold text-white mb-4">{ctaFooter.title}</h3>
                <a 
                    href={ctaFooter.link}
                    class="inline-block px-8 py-3 rounded-md font-medium bg-secondary text-white transition-all duration-300 hover:bg-red-700 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-offset-primary focus-visible:ring-white shadow-md hover:shadow-lg transform hover:-translate-y-px" /* CTA con color secundario */
                >
                    {ctaFooter.buttonText}
                </a>
            </div>

            {/* Columna 3: Redes Sociales - Mostrar solo si hay enlaces */}
            {socialLinks.length > 0 && (
                <div class="lg:col-span-3 md:mt-0">
                    <h3 class="text-base font-semibold text-white uppercase tracking-wider mb-4">Síguenos</h3>
                    <div class="flex space-x-4">
                        {socialLinks.map(social => (
                            <a 
                                href={social.href} 
                                target="_blank" 
                                rel="noopener noreferrer" 
                                class="text-blue-100 hover:text-white transition-colors duration-300 group"
                                aria-label={social.name}
                            >
                                <Fragment set:html={social.iconSvg} /> {/* El SVG del ícono debe tener clases para color y hover, ej: text-white group-hover:text-blue-200 */}
                            </a>
                        ))}
                    </div>
                </div>
            )}
        </div>

        {/* Sub-Footer */}
        <div class="mt-8 pt-8 border-t border-blue-500/50 text-center md:flex md:justify-between md:items-center"> {/* Borde más claro sobre fondo azul */}
            <p class="text-xs text-blue-200 mb-4 md:mb-0"> {/* Texto del copyright un poco más claro */}
                © {currentYear} LAYCE Construcciones. Todos los derechos reservados.
            </p>
            <div class="text-xs">
                <a href="/aviso-privacidad" class="text-blue-200 hover:text-white transition-colors duration-300">Aviso de Privacidad</a>
            </div>
        </div>
    </div>
</footer>