---
// src/components/layout/Footer.astro
import Logo from '../../assets/Layce_logo_horizontal_transparent.svg'; // Usar el mismo logo por ahora

const currentYear = new Date().getFullYear();

const ctaFooter = {
    title: "¿Listo para construir tu próximo gran proyecto?",
    buttonText: "Contáctanos Ahora",
    link: "/contacto",
};

// Placeholder para redes sociales.
const socialLinks = [
    // { name: "LinkedIn", href: "#", iconSvg: `<svg class="w-6 h-6 text-white hover:text-gray-200" ...>...</svg>` },
    { name: "Instagram", href: "#", iconSvg: `<svg class="w-6 h-6 text-white hover:text-gray-200" ...>...</svg>` },
];
// Ejemplo de icono SVG para redes (debes reemplazar con los reales y añadirles la clase para el color):
// const linkedInIcon = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-white group-hover:text-blue-200 transition-colors duration-300"> <path d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.25 6.5 1.75 1.75 0 016.5 8.25zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"></path> </svg>`;
// const socialLinks = [
//     { name: "LinkedIn", href: "https://linkedin.com/company/layce", iconSvg: linkedInIcon },
// ];
---

<footer class="relative bg-gradient-to-br from-primary via-primary to-primary/90 text-white overflow-hidden">
    {/* Patrón decorativo de fondo */}
    <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-transparent"></div>
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-blue-400 to-transparent"></div>
    
    <div class="relative z-10">
        {/* Sección principal */}
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-12">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-16 items-start">
                
                {/* Columna 1: Logo y Descripción */}
                <div class={socialLinks.length > 0 ? "lg:col-span-5" : "lg:col-span-6"}>
                    <div class="space-y-8">
                        <a href="/" class="inline-block group" aria-label="Página de inicio de LAYCE Construcciones">
                            <img 
                                src={Logo.src} 
                                alt="Logo LAYCE Construcciones" 
                                class="h-14 w-auto transition-all duration-300 group-hover:scale-105"
                                style="filter: brightness(0) invert(1) grayscale(1) contrast(100);"
                            />
                        </a>
                        
                        <div class="space-y-4">
                            <p class="text-base leading-relaxed max-w-md text-blue-100/90 font-light">
                                Construyendo confianza y calidad en cada proyecto. Su visión, nuestra experiencia combinada con innovación y compromiso sostenible.
                            </p>
                            
                            {/* Elementos de confianza */}
                            <div class="flex flex-wrap gap-3 pt-2">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-500/20 text-blue-100 border border-blue-400/30">
                                    ✓ 15+ años de experiencia
                                </span>
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-500/20 text-blue-100 border border-blue-400/30">
                                    ✓ Proyectos sostenibles
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                {/* Columna 2: CTA a Contacto */}
                <div class={socialLinks.length > 0 ? "lg:col-span-4" : "lg:col-span-6"}>
                    <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:bg-white/8 transition-all duration-300">
                        <div class="space-y-6">
                            <div>
                                <h3 class="text-xl font-bold text-white mb-2 leading-tight">
                                    {ctaFooter.title}
                                </h3>
                                <p class="text-sm text-blue-100/80">
                                    Hablemos sobre tu próximo proyecto
                                </p>
                            </div>
                            
                            <a 
                                href={ctaFooter.link}
                                class="inline-flex items-center justify-center w-full px-8 py-4 rounded-xl font-semibold bg-gradient-to-r from-secondary to-red-600 text-white transition-all duration-300 hover:from-red-600 hover:to-red-700 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-offset-primary focus-visible:ring-white shadow-lg hover:shadow-xl transform hover:-translate-y-1 hover:scale-[1.02] group"
                            >
                                <span>{ctaFooter.buttonText}</span>
                                <svg class="ml-2 w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>

                {/* Columna 3: Redes Sociales - Mostrar solo si hay enlaces */}
                {socialLinks.length > 0 && (
                    <div class="lg:col-span-3">
                        <div class="space-y-6">
                            <h3 class="text-lg font-bold text-white">Síguenos</h3>
                            <div class="flex flex-col space-y-3">
                                {socialLinks.map(social => (
                                    <a 
                                        href={social.href} 
                                        target="_blank" 
                                        rel="noopener noreferrer" 
                                        class="inline-flex items-center space-x-3 p-3 rounded-lg bg-white/5 text-blue-100 hover:bg-white/10 hover:text-white transition-all duration-300 group border border-transparent hover:border-white/20"
                                        aria-label={social.name}
                                    >
                                        <Fragment set:html={social.iconSvg} />
                                        <span class="font-medium">{social.name}</span>
                                        <svg class="ml-auto w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                        </svg>
                                    </a>
                                ))}
                            </div>
                        </div>
                    </div>
                )}
            </div>
        </div>

        {/* Sub-Footer moderno */}
        <div class="border-t border-gradient-to-r from-transparent via-blue-400/30 to-transparent bg-black/20 backdrop-blur-sm">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
                <div class="flex flex-col md:flex-row md:justify-between md:items-center space-y-4 md:space-y-0">
                    <div class="flex flex-col md:flex-row md:items-center space-y-2 md:space-y-0 md:space-x-8">
                        <p class="text-sm text-blue-200/80 font-medium">
                            © {currentYear} LAYCE Construcciones. Todos los derechos reservados.
                        </p>
                        <div class="flex items-center space-x-6 text-sm">
                            <a href="/aviso-privacidad" class="text-blue-200/80 hover:text-white transition-colors duration-300 hover:underline">
                                Aviso de Privacidad
                            </a>
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-2 text-xs text-blue-200/60">
                        <span>Hecho con</span>
                        <svg class="w-4 h-4 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                        </svg>
                        <span>en México</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>